# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-railway-domain.railway.app

# Database (Railway PostgreSQL)
# Development: Leave empty for SQLite
# Production: Railway will auto-provide this
DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Settings (Frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.vercel.app

# Static Files (Production)
STATIC_ROOT=staticfiles
STATIC_URL=/static/
